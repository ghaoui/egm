                            <div class="col-lg-9">
                              {{ form_label(form.societe)}}
                              {{ form_widget(form.societe, {'attr': {'class' : 'form-control'}}) }}
                            </div>
                          <div class="col-lg-3">
                              {{ form_label(form.datefact) }}
